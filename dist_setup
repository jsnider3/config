#!/bin/sh
# A script to install all the packages I want
#   on my machines.

#Programming
sudo apt-get install -y build-essential gcc g++ 
sudo apt-get install -y python3 pylint pypy
sudo apt-get install -y ghc haskell-platform yesod
sudo apt-get install -y openjdk-7-jdk openjdk-8-jdk
sudo apt-get install -y ocaml opam
sudo apt-get install -y jekyll ruby1.9.1-dev

cabal install primes

#Pretty backgrounds
sudo apt-get -y install variety

#Chrome
sudo apt-get -y install google-chrome-stable

#Media
sudo apt-get -y install vlc
sudo apt-get -y install gstreamer0.10-plugins-ugly gxine libdvdread4 \
                totem-mozilla icedax tagtool easytag id3tool lame \
                nautilus-script-audio-convert libmad0 mpg321 \
                gstreamer1.0-libav

#Compressed files
sudo apt-get -y install unace unrar zip unzip p7zip-full \
                p7zip-rar sharutils rar uudeview mpack arj \
                cabextract file-roller

#Finalize
sudo apt-get update
sudo apt-get upgrade
sudo apt-get autoremove
